<JobScreen>:
    CustomBackground:
        BoxLayout:
            size_hint_y: None
            height: "24pt"
            orientation: 'horizontal'

            CustomLabel:
                text: 'Job name: '

            CustomLabel:
                id: job_name
                halign: 'left'
                text: ''

        BoxLayout:
            size_hint_y: None
            height: "24pt"
            orientation: 'horizontal'

            CustomLabel:
                text: 'Job status: '

            CustomLabel:
                id: job_status
                halign: 'left'
                text: ''

        AnchorLayout:
            CustomButton:
                size_hint_x: None
                text: 'Go back'
                on_press:
                    app.sm.current = 'MainScreen'