<SignInScreen>:
    BoxLayout:
        padding: [30, 30, 30, 30]
    	orientation: 'vertical'

    	canvas:
            Color:
                rgba: 255, 255, 255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        CustomHeader:
    		text: 'Please enter a delegate private key associated with one of your Rein identities.'

        BoxLayout:
        	orientation: 'horizontal'

        	CustomLabel:
        		text: 'Private key: '

        	CustomInput:
        		id: delprivkey
        		hint_text: 'Delegate private key'

        	CustomButton:
        		text: 'Import identity'
        		on_press:
        			from functionality.sign_in import import_identity
        			import_identity(delprivkey.text, identity_feedback, app.sm)

        BoxLayout:
        	orientation: 'horizontal'

        	CustomLabel:
        		id: identity_feedback