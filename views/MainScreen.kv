#:import queries functionality.queries
#:import Setting functionality.Setting.Setting

<ActiveJobRow@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

    value: ''
    Label:
        text: root.value

    Button:
        size_hint: (0.5, 1)
        text: 'View status'
        on_press:
            from functionality.main_screen import view_active_job
            view_active_job(root.job, app.sm)

<Row@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

<MainScreen>:
    BoxLayout:
        padding: [30, 30, 30, 30]
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 255, 255, 255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: '[b]Welcome to Rein![/b]'
            color: 211, 211, 211, 1
            markup: True
            size_hint_y: 0.5

        Label:
            text: 'Your active jobs:'
            color: 211, 211, 211, 1
            size_hint_y: 0.5

        RecycleView:
            id: rv_active
            data: []
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'ActiveJobRow'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)

        Label:
            text: 'Available jobs:'
            color: 211, 211, 211, 1
            size_hint_y: 0.5

        RecycleView:
            id: rv_open
            data: [{'value': item['name']} for item in queries.get_open_jobs()]
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)