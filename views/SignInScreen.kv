<SignInScreen>:
    BoxLayout:
    	orientation: 'vertical'

    	canvas:
            Color:
                rgba: 255, 255, 255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
    		text: 'Please enter a delegate private key associated with one of your Rein identities.'
    		color: 211, 211, 211, 1

        BoxLayout:
        	orientation: 'horizontal'

        	Label:
        		text: 'Private key: '
        		color: 211, 211, 211, 1

        	TextInput:
        		id: delprivkey
        		multiline: False
        		hint_text: 'Delegate private key'

        	Button:
        		text: 'Import identity'
        		on_press:
        			from functionality.sign_in import import_identity
        			import_identity(delprivkey.text, identity_feedback, app.sm)

        BoxLayout:
        	orientation: 'horizontal'

        	Label:
        		id: identity_feedback
        		color: 211, 211, 211, 1